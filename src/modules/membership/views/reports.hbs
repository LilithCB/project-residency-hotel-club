{{>navbar}}

<!-- Contenido principal -->
<div class="container mx-auto px-4 mt-20">
    <div id="notification-area" class="mb-4"></div>
    <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-200">
        <div class="flex items-center mb-6">
            <div class="bg-gradient-to-br from-blue-500 to-purple-600 p-3 rounded-xl mr-4 shadow-md">
                <i class="fas fa-chart-bar text-white text-2xl"></i>
            </div>
            <div>
                <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                    Generador de Reportes</h1>
                <p class="text-gray-600 mt-2">Selecciona el tipo de reporte y el período deseado para generar la
                    información.</p>
            </div>
        </div>

        <!-- Selector de tipo de reporte -->
        <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-700 mb-6 flex items-center">
                <i class="fas fa-chart-line mr-3 text-blue-500"></i>Tipo de Reporte
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="period-option border-2 border-gray-200 rounded-2xl p-6 text-center cursor-pointer transition-all duration-300 hover:shadow-xl transform hover:-translate-y-2 bg-gradient-to-br from-blue-50 to-white group"
                    data-period="monthly">
                    <div
                        class="bg-gradient-to-br from-blue-500 to-blue-600 p-4 rounded-xl inline-flex mb-4 group-hover:scale-110 transition-transform duration-300">
                        <i class="fa-solid fa-calendar text-white text-2xl"></i>
                    </div>
                    <h3 class="font-semibold text-gray-800 text-lg mb-2">Reporte Mensual</h3>
                    <p class="text-sm text-gray-500">Resumen completo del mes seleccionado</p>
                </div>
                <div class="period-option border-2 border-gray-200 rounded-2xl p-6 text-center cursor-pointer transition-all duration-300 hover:shadow-xl transform hover:-translate-y-2 bg-gradient-to-br from-gray-50 to-white group"
                    data-period="biweekly">
                    <div
                        class="bg-gradient-to-br from-purple-500 to-purple-600 p-4 rounded-xl inline-flex mb-4 group-hover:scale-110 transition-transform duration-300">
                        <i class="fas fa-calendar-alt text-white text-2xl"></i>
                    </div>
                    <h3 class="font-semibold text-gray-800 text-lg mb-2">Reporte Quincenal</h3>
                    <p class="text-sm text-gray-500">Primera o segunda quincena del mes</p>
                </div>
                <div class="period-option border-2 border-gray-200 rounded-2xl p-6 text-center cursor-pointer transition-all duration-300 hover:shadow-xl transform hover:-translate-y-2 bg-gradient-to-br from-indigo-50 to-white group"
                    data-period="weekly">
                    <div
                        class="bg-gradient-to-br from-indigo-500 to-indigo-600 p-4 rounded-xl inline-flex mb-4 group-hover:scale-110 transition-transform duration-300">
                        <i class="fas fa-calendar-week text-white text-2xl"></i>
                    </div>
                    <h3 class="font-semibold text-gray-800 text-lg mb-2">Reporte Semanal</h3>
                    <p class="text-sm text-gray-500">Una semana específica del año</p>
                </div>
            </div>
        </div>

        <!-- Selector de fecha -->
        <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-700 mb-6 flex items-center">
                <i class="fas fa-calendar-day mr-3 text-blue-500"></i>Selecciona la Fecha
            </h2>
            <div id="monthly-selector" class="date-selector">
                <div class="flex space-x-4">
                    <input type="month" id="month-input"
                        class="border-2 border-gray-200 rounded-xl p-3 w-full md:w-80 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300">
                </div>
            </div>
            <div id="biweekly-selector" class="date-selector hidden">
                <div class="flex flex-col md:flex-row md:items-center space-y-4 md:space-y-0 md:space-x-4">
                    <input type="month" id="biweekly-month-input"
                        class="border-2 border-gray-200 rounded-xl p-3 w-full md:w-80 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300">
                    <select id="fortnight-select"
                        class="border-2 border-gray-200 rounded-xl p-3 w-full md:w-64 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 bg-white">
                        <option value="first">Primera quincena</option>
                        <option value="second">Segunda quincena</option>
                    </select>
                </div>
            </div>
            <div id="weekly-selector" class="date-selector hidden">
                <div class="flex space-x-4">
                    <input type="week" id="week-input"
                        class="border-2 border-gray-200 rounded-xl p-3 w-full md:w-80 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300">
                </div>
            </div>
            <div class="mt-6 flex space-x-4">
                <button id="generate-report-btn"
                    class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">
                    <i class="fas fa-chart-bar mr-2"></i>Generar Reporte
                </button>
                <button id="clear-preview-btn" type="button"
                    class="bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">
                    <i class="fas fa-eraser mr-2"></i>Limpiar Vista
                </button>
            </div>
        </div>

        <!-- Vista previa del reporte -->
        <div id="preview-container"
            class="bg-gradient-to-br from-gray-50 to-white rounded-2xl p-8 mt-8 mb-20 border-2 border-gray-200">
            <h2 class="text-xl font-semibold text-gray-700 mb-6 flex items-center">
                <i class="fas fa-eye mr-3 text-blue-500"></i>Vista Previa del Reporte
            </h2>

            <div id="message-area"
                class="flex justify-center items-center h-40 border-2 border-dashed border-gray-300 rounded-2xl bg-white">
                <div class="text-center">
                    <i class="fas fa-chart-pie text-4xl text-gray-400 mb-3"></i>
                    <p id="message-text" class="text-gray-500 font-medium">Selecciona un tipo de reporte y una fecha
                        para generar la vista previa</p>
                </div>
            </div>

            <div id="results-table" class="hidden">
                <div class="overflow-x-auto rounded-2xl border-2 border-gray-200 shadow-sm">
                    <table class="w-full border-collapse">
                        <thead class="bg-gradient-to-r from-gray-100 to-gray-200">
                            <tr>
                                <th class="border-b-2 border-gray-300 px-6 py-4 text-left font-semibold text-gray-700">
                                    Método de Pago</th>
                                <th class="border-b-2 border-gray-300 px-6 py-4 text-right font-semibold text-gray-700">
                                    Monto Acumulado</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr class="hover:bg-gray-50 transition-colors duration-200">
                                <td class="px-6 py-4 text-gray-700 font-medium">Efectivo</td>
                                <td id="monto-efectivo" class="px-6 py-4 text-right font-semibold text-gray-800"></td>
                            </tr>
                            <tr class="hover:bg-gray-50 transition-colors duration-200">
                                <td class="px-6 py-4 text-gray-700 font-medium">Tarjeta Débito</td>
                                <td id="monto-debito" class="px-6 py-4 text-right font-semibold text-gray-800"></td>
                            </tr>
                            <tr class="hover:bg-gray-50 transition-colors duration-200">
                                <td class="px-6 py-4 text-gray-700 font-medium">Tarjeta Crédito</td>
                                <td id="monto-credito" class="px-6 py-4 text-right font-semibold text-gray-800"></td>
                            </tr>
                            <tr class="hover:bg-gray-50 transition-colors duration-200">
                                <td class="px-6 py-4 text-gray-700 font-medium">Transferencia</td>
                                <td id="monto-transferencia" class="px-6 py-4 text-right font-semibold text-gray-800">
                                </td>
                            </tr>
                        </tbody>
                        <tfoot class="bg-gradient-to-r from-gray-100 to-gray-200">
                            <tr>
                                <td class="px-6 py-4 text-left font-bold text-gray-800 border-t-2 border-gray-300">Total
                                    Neto</td>
                                <td id="monto-total"
                                    class="px-6 py-4 text-right font-bold text-gray-800 border-t-2 border-gray-300">
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="mt-8 flex justify-end">
                    <a id="download-pdf-btn" href="#"
                        class="bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 inline-flex items-center">
                        <i class="fas fa-file-pdf mr-2"></i>Descargar PDF
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{{>footer}}

<script src="/js/moduleMembershipJs/reports.js"></script>