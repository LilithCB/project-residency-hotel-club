<script>
    // Funci√≥n para obtener la primera letra de un nombre
    function getFirstLetter(name) {
        return name ? name.charAt(0).toUpperCase() : '';
    }

    // Funci√≥n para formatear fechas
    function formatDate(dateString) {
        if (!dateString) return '';
        const date = new Date(dateString);
        return date.toLocaleDateString('es-ES', {
            year: 'numeric',
            month: 'short',
            day: 'numeric'
        });
    }

    // Aplicar mejoras cuando el documento est√© listo
    document.addEventListener('DOMContentLoaded', function () {
        // Iniciales de los nombres con avatar de gradiente
        const initialElements = document.querySelectorAll('[data-initial]');
        initialElements.forEach(element => {
            const name = element.getAttribute('data-initial');
            element.textContent = getFirstLetter(name);
        });

        // Formatear todas las fechas en la tabla
        const dateFields = document.querySelectorAll('.date-field');
        dateFields.forEach(field => {
            const dateText = field.textContent.trim();
            if (dateText && !isNaN(new Date(dateText).getTime())) {
                field.textContent = formatDate(dateText);
            }
        });

        // Agregar tooltips a los botones de acci√≥n
        const actionButtons = document.querySelectorAll('.action-btn');
        actionButtons.forEach(button => {
            const title = button.getAttribute('title');
            if (title) {
                button.setAttribute('data-tooltip', title);
                button.removeAttribute('title');
            }
        });

        // Efectos de hover para las tarjetas de estad√≠sticas
        const statCards = document.querySelectorAll('.bg-white.rounded-2xl');
        statCards.forEach(card => {
            card.addEventListener('mouseenter', () => {
                card.style.transform = 'translateY(-2px)';
                card.style.boxShadow = '0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)';
            });

            card.addEventListener('mouseleave', () => {
                card.style.transform = 'translateY(0)';
                card.style.boxShadow = '0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)';
            });
        });

        // Busqueda en tiempo real
        const searchInput = document.querySelector('input[type="text"]');
        if (searchInput) {
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('.table-row');

                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        row.style.display = '';
                        row.classList.add('bg-green-100');
                        setTimeout(() => row.classList.remove('bg-green-100'), 1000);
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }
    });
</script>
