{{>navbar}}

<div class="container mx-auto px-4 py-6 mt-20">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Administrar Configuraciones</h1>
            <p class="text-gray-600 mt-2">Gestiona tipos de membresías y métodos de pago del sistema</p>
        </div>

        <div class="flex flex-wrap gap-3 mt-4 md:mt-0">
            <a href="/memberships"
                class="bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white px-5 py-2.5 rounded-xl font-medium flex items-center transition-all duration-300 transform hover:-translate-y-0.5 shadow-lg hover:shadow-xl">
                <i class="fas fa-arrow-left mr-2"></i> Volver
            </a>
        </div>
    </div>

    <!-- Tipos de Membresías -->
    <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 border-2 border-gray-200">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center">
                <div class="bg-gradient-to-br from-blue-500 to-purple-600 p-3 rounded-xl mr-4 shadow-md">
                    <i class="fas fa-id-card-alt text-white text-xl"></i>
                </div>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                    Tipos de Membresías
                </h2>
            </div>
            <button type="button" id="addTipoMembresiaBtn"
                class="inline-flex items-center px-4 py-2.5 border-2 border-blue-300 text-sm font-semibold rounded-xl text-blue-700 bg-white hover:bg-blue-50 hover:border-blue-400 transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <i class="fas fa-plus-circle mr-2"></i> Nuevo Tipo
            </button>
        </div>

        <div class="overflow-x-auto rounded-2xl border-2 border-gray-200 shadow-sm">
            <table class="w-full border-collapse">
                <thead class="bg-gradient-to-r from-gray-100 to-gray-200">
                    <tr>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-left font-semibold text-gray-700">Nombre</th>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-left font-semibold text-gray-700">Descripción</th>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-left font-semibold text-gray-700">Máx. Integrantes</th>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-right font-semibold text-gray-700">Precio</th>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-center font-semibold text-gray-700">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="tiposMembresiaTableBody">
                    {{#each tiposMembresia}}
                    <tr class="hover:bg-gray-50 transition-colors duration-200" data-id="{{this.id_tipo_membresia}}">
                        <td class="px-6 py-4 text-gray-800 font-semibold">{{this.nombre}}</td>
                        <td class="px-6 py-4 text-gray-700">{{this.descripcion}}</td>
                        <td class="px-6 py-4 text-gray-700">{{this.max_integrantes}}</td>
                        <td class="px-6 py-4 text-right font-bold text-gray-800">${{this.precio}}</td>
                        <td class="px-6 py-4 text-center">
                            <div class="flex justify-center space-x-2">
                                <button
                                    class="edit-tipo-btn action-btn bg-blue-100 text-blue-600 hover:bg-blue-200 hover:scale-110 transition-all duration-200"
                                    data-id="{{this.id_tipo_membresia}}" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button
                                    class="delete-tipo-btn action-btn bg-red-100 text-red-600 hover:bg-red-200 hover:scale-110 transition-all duration-200"
                                    data-id="{{this.id_tipo_membresia}}" data-nombre="{{this.nombre}}" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Métodos de Pago -->
    <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 border-2 border-gray-200">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center">
                <div class="bg-gradient-to-br from-green-500 to-emerald-600 p-3 rounded-xl mr-4 shadow-md">
                    <i class="fas fa-credit-card text-white text-xl"></i>
                </div>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                    Métodos de Pago
                </h2>
            </div>
            <button type="button" id="addMetodoPagoBtn"
                class="inline-flex items-center px-4 py-2.5 border-2 border-green-300 text-sm font-semibold rounded-xl text-green-700 bg-white hover:bg-green-50 hover:border-green-400 transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-green-500">
                <i class="fas fa-plus-circle mr-2"></i> Nuevo Método
            </button>
        </div>

        <div class="overflow-x-auto rounded-2xl border-2 border-gray-200 shadow-sm">
            <table class="w-full border-collapse">
                <thead class="bg-gradient-to-r from-gray-100 to-gray-200">
                    <tr>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-left font-semibold text-gray-700">Nombre</th>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-center font-semibold text-gray-700">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="metodosPagoTableBody">
                    {{#each metodosPago}}
                    <tr class="hover:bg-gray-50 transition-colors duration-200" data-id="{{this.id_metodo_pago}}">
                        <td class="px-6 py-4 text-gray-800 font-semibold">{{this.nombre}}</td>
                        <td class="px-6 py-4 text-center">
                            <div class="flex justify-center space-x-2">
                                <button
                                    class="edit-metodo-btn action-btn bg-blue-100 text-blue-600 hover:bg-blue-200 hover:scale-110 transition-all duration-200"
                                    data-id="{{this.id_metodo_pago}}" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button
                                    class="delete-metodo-btn action-btn bg-red-100 text-red-600 hover:bg-red-200 hover:scale-110 transition-all duration-200"
                                    data-id="{{this.id_metodo_pago}}" data-nombre="{{this.nombre}}" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para Tipo de Membresía -->
<div id="tipoMembresiaModal"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md transform transition-all duration-300 scale-95">
        <div class="p-6 border-b-2 border-gray-200">
            <h3 id="tipoModalTitle" class="text-xl font-bold text-gray-800 flex items-center">
                <i class="fas fa-id-card-alt mr-3 text-blue-500"></i><span id="tipoModalTitleText">Nuevo Tipo de
                    Membresía</span>
            </h3>
        </div>
        <form id="tipoMembresiaForm" class="p-6 space-y-4">
            <input type="hidden" id="tipoId" name="id_tipo_membresia" value="">

            <div class="space-y-2">
                <label for="tipoNombre" class="block text-sm font-semibold text-gray-700">Nombre *</label>
                <input type="text" id="tipoNombre" name="nombre" required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300">
            </div>

            <div class="space-y-2">
                <label for="tipoDescripcion" class="block text-sm font-semibold text-gray-700">Descripción</label>
                <textarea id="tipoDescripcion" name="descripcion" rows="3"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300 resize-none"></textarea>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                    <label for="tipoMaxIntegrantes" class="block text-sm font-semibold text-gray-700">Máx. Integrantes *</label>
                    <input type="number" id="tipoMaxIntegrantes" name="max_integrantes" min="1" required
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300">
                </div>
                <div class="space-y-2">
                    <label for="tipoPrecio" class="block text-sm font-semibold text-gray-700">Precio *</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <span class="text-gray-500 font-medium">$</span>
                        </div>
                        <input type="number" id="tipoPrecio" name="precio" step="0.01" min="0" required
                            class="pl-10 w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300">
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-3 pt-4">
                <button type="button" id="cancelTipoBtn"
                    class="px-5 py-2.5 border-2 border-gray-300 text-sm font-semibold rounded-xl text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 transition-all duration-300">
                    Cancelar
                </button>
                <button type="submit"
                    class="px-5 py-2.5 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-sm font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">
                    <i class="fas fa-save mr-2"></i>Guardar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal para Método de Pago -->
<div id="metodoPagoModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md transform transition-all duration-300 scale-95">
        <div class="p-6 border-b-2 border-gray-200">
            <h3 id="metodoModalTitle" class="text-xl font-bold text-gray-800 flex items-center">
                <i class="fas fa-credit-card mr-3 text-green-500"></i><span id="metodoModalTitleText">Nuevo Método de
                    Pago</span>
            </h3>
        </div>
        <form id="metodoPagoForm" class="p-6 space-y-4">
            <input type="hidden" id="metodoId" name="id_metodo_pago" value="">

            <div class="space-y-2">
                <label for="metodoNombre" class="block text-sm font-semibold text-gray-700">Nombre *</label>
                <input type="text" id="metodoNombre" name="nombre" required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-300 hover:border-gray-300">
            </div>

            <div class="flex justify-end space-x-3 pt-4">
                <button type="button" id="cancelMetodoBtn"
                    class="px-5 py-2.5 border-2 border-gray-300 text-sm font-semibold rounded-xl text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 transition-all duration-300">
                    Cancelar
                </button>
                <button type="submit"
                    class="px-5 py-2.5 bg-gradient-to-r from-green-600 to-emerald-600 text-white text-sm font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">
                    <i class="fas fa-save mr-2"></i>Guardar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal de Confirmación Eliminación -->
<div id="deleteConfirmModal"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md transform transition-all duration-300 scale-95">
        <div class="p-6 border-b-2 border-gray-200">
            <h3 class="text-xl font-bold text-gray-800 flex items-center">
                <i class="fas fa-exclamation-triangle mr-3 text-red-500"></i>Confirmar Eliminación
            </h3>
        </div>
        <div class="p-6">
            <p id="deleteConfirmMessage" class="text-gray-700 mb-6"></p>
            <div class="flex justify-end space-x-3">
                <button type="button" id="cancelDeleteBtn"
                    class="px-5 py-2.5 border-2 border-gray-300 text-sm font-semibold rounded-xl text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 transition-all duration-300">
                    Cancelar
                </button>
                <button type="button" id="confirmDeleteBtn"
                    class="px-5 py-2.5 bg-gradient-to-r from-red-600 to-red-700 text-white text-sm font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">
                    <i class="fas fa-trash-alt mr-2"></i>Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

<script src="/js/moduleMembershipJs/manageTypes.js"></script>
