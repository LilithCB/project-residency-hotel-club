{{>navbar}}

<div class="max-w-7xl mx-auto p-4 sm:p-6">
  {{>buttons}}

  <!-- Tabla de rentas -->
  <section id="tableSection" class="overflow-x-auto mt-6">
    <table class="min-w-full bg-white border border-gray-200 shadow-lg rounded-xl overflow-hidden">
      <thead class="bg-blue-800 text-white text-xs sm:text-sm uppercase">
        <tr>
          <th class="py-2 px-3 sm:py-3 sm:px-4 text-left">Nombre del cliente</th>
          <th class="py-2 px-3 sm:py-3 sm:px-4 text-left">Número de habitación</th>
          <th class="py-2 px-3 sm:py-3 sm:px-4 text-left">Fecha de Ingreso</th>
          <th class="py-2 px-3 sm:py-3 sm:px-4 text-left">Fecha de Salida</th>
          <th class="py-2 px-3 sm:py-3 sm:px-4 text-left">Tipo de Pago</th>
          <th class="py-2 px-3 sm:py-3 sm:px-4 text-left">Monto</th>
          <th class="py-2 px-3 sm:py-3 sm:px-4 text-left">Monto en letras</th>
          <th class="py-2 px-3 sm:py-3 sm:px-4 text-center">Acciones</th>
        </tr>
      </thead>

      <tbody class="text-gray-700 divide-y divide-gray-200 text-xs sm:text-sm">
        {{#each allRentas}}
        <tr class="hover:bg-gray-50 transition">
          <td class="py-2 px-3 sm:py-3 sm:px-4 capitalize">{{this.nombre_cliente}}</td>
          <td class="py-2 px-3 sm:py-3 sm:px-4 capitalize">{{this.numero_habitacion}}</td>
          <td class="py-2 px-3 sm:py-3 sm:px-4">{{this.fecha_ingreso}}</td>
          <td class="py-2 px-3 sm:py-3 sm:px-4">{{this.fecha_salida}}</td>
          <td class="py-2 px-3 sm:py-3 sm:px-4 capitalize">{{this.tipo_pago}}</td>
          <td class="py-2 px-3 sm:py-3 sm:px-4">{{this.monto}}</td>
          <td class="py-2 px-3 sm:py-3 sm:px-4 capitalize">{{this.monto_letras}}</td>
          <td class="py-2 px-3 sm:py-3 sm:px-4 text-center flex flex-wrap justify-center gap-2 sm:gap-4">
            <form action="/rentas/eliminar/{{this.id_renta}}" method="POST" style="display:inline;" onsubmit="return confirm('¿Eliminar la renta de {{this.numero_habitacion}}?');">
              <button type="submit" class="px-2 sm:px-3 py-1 bg-red-600 hover:bg-red-700 text-white text-xs sm:text-sm rounded-lg shadow-sm transition">
                Eliminar
              </button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </section>
</div>
