<div class="max-w-2xl mx-auto p-6">
  <h2 class="text-2xl font-bold text-blue-800 mb-6 text-center">Membresías</h2>
  {{#if memberships.length}}
    <table class="min-w-full bg-white border border-gray-200 shadow-md rounded-lg">
      <thead class="bg-blue-800 text-white">
        <tr>
          <th class="py-2 px-4 text-left">Nombre</th>
          <th class="py-2 px-4 text-left">Precio</th>
        </tr>
      </thead>
      <tbody>
        {{#each memberships}}
          <tr class="border-b hover:bg-gray-100 transition">
            <td class="py-2 px-4 font-semibold">{{name}}</td>
            <td class="py-2 px-4 font-bold">${{price}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="text-center text-gray-500 mt-8">No hay membresías registradas.</p>
  {{/if}}
</div>
