<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet">
  <script src="https://unpkg.com/tippy.js@6/dist/tippy-bundle.umd.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.2/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-6">

  <h1 class="text-3xl font-bold mb-6 text-center">{{title}}</h1>

  <div id="calendar" class="bg-white rounded-lg shadow p-4"></div>

  <script>
    document.addEventListener('DOMContentLoaded', async function() {
      const calendarEl = document.getElementById('calendar');

      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        height: 650,
        events: '/rooms/calendario/eventos', // Endpoint para obtener eventos
        headerToolbar: {
          left: 'prev,next today',
          center: 'title',
          right: 'dayGridMonth,timeGridWeek,timeGridDay'
        },
        eventDidMount: function(info) {
          // Crear tooltip con tippy.js
          tippy(info.el, {
            content: `
              <div class="p-2">
                <strong>Cliente:</strong> ${info.event.title} <br>
                <strong>Correo:</strong> ${info.event.extendedProps.correo} <br>
                <strong>Teléfono:</strong> ${info.event.extendedProps.telefono} <br>
                <strong>Tipo:</strong> ${info.event.extendedProps.tipo}
              </div>
            `,
            allowHTML: true,
            theme: 'light',
          });

          // Cambiar color según tipo
          if (info.event.extendedProps.tipo === 'renta') {
            info.el.style.backgroundColor = '#34d399'; // verde
          } else {
            info.el.style.backgroundColor = '#3b82f6'; // azul
          }
        }
      });

      calendar.render();
    });
  </script>
</body>
</html>
