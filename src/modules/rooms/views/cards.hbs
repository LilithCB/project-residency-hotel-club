<h2>Habitaciones (Tarjetas)</h2>
<div class="cards-container">
  {{#each habitaciones}}
    <div class="card"
      style="border:2px solid;
        {{#if (eq estado 'disponible')}}border-color:#bdbdbd;{{/if}}
        {{#if (eq estado 'ocupado')}}border-color:#ff4d4d;{{/if}}
        {{#if (eq estado 'limpieza')}}border-color:#ffa500;{{/if}}">
      <h3>Habitaci√≥n {{numero}}</h3>
      <p>Tipo: {{tipo}}</p>
      <p>Estado: <b>{{estado}}</b></p>
      <p>Precio: ${{precio}}</p>
      {{#if (eq estado 'ocupado')}}
        <button onclick="desocupar('{{numero}}')">Desocupar</button>
      {{/if}}
      {{#if (eq estado 'limpieza')}}
        <button onclick="confirmarLimpieza('{{numero}}')">Confirmar Limpieza</button>
      {{/if}}
    </div>
  {{/each}}
</div>
