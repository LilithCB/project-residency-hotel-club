<div class="max-w-3xl mx-auto p-6">
  <h2 class="text-2xl font-bold text-blue-800 mb-6 text-center">Reservaciones</h2>
  {{#if reservaciones.length}}
    <table class="min-w-full bg-white border border-gray-200 shadow-md rounded-lg">
      <thead class="bg-blue-800 text-white">
        <tr>
          <th class="py-2 px-4 text-left">Cliente</th>
          <th class="py-2 px-4 text-left">Habitaci√≥n</th>
          <th class="py-2 px-4 text-left">Ingreso</th>
          <th class="py-2 px-4 text-left">Salida</th>
        </tr>
      </thead>
      <tbody>
        {{#each reservaciones}}
          <tr class="border-b hover:bg-gray-100 transition">
            <td class="py-2 px-4">{{nombre_cliente}}</td>
            <td class="py-2 px-4">{{habitacion_id}}</td>
            <td class="py-2 px-4">{{fecha_ingreso}}</td>
            <td class="py-2 px-4">{{fecha_salida}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="text-center text-gray-500 mt-8">No hay reservaciones registradas.</p>
  {{/if}}
</div>
