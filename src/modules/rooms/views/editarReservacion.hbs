<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
  <div class="w-full sm:max-w-lg lg:max-w-xl bg-white rounded-2xl shadow-md p-8 space-y-6">

    <!-- Header -->
    <header class="mb-6 flex items-center justify-between">
      <h1 class="text-2xl font-bold text-yellow-700">Editar reservación #{{reservacion.id}}</h1>
      <a href="/rooms/list/reservations" class="text-sm text-gray-600 hover:underline">← Volver a reservaciones</a>
    </header>

    <!-- Info Reservación -->
    <section class="mb-6 bg-gray-100 rounded p-4 text-sm text-gray-800 space-y-1">
      <p><strong>Habitación actual:</strong> {{reservacion.habitacion_numero}} - {{reservacion.habitacion_tipo}}</p>
    </section>

    <!-- Formulario -->
    <form action="/api/reservaciones/{{reservacion.id}}/editar" method="POST" class="space-y-4">

      <!-- Cliente -->
      <div>
        <label for="nombre_cliente" class="block text-sm font-medium text-gray-700">Nombre del cliente</label>
        <input id="nombre_cliente" name="nombre_cliente" value="{{reservacion.nombre_cliente}}" required
               class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500" />
      </div>

      <!-- Fechas -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label for="fecha_ingreso" class="block text-sm font-medium text-gray-700">Fecha de ingreso</label>
          <input id="fecha_ingreso" name="fecha_ingreso" type="date" value="{{reservacion.fecha_ingreso}}" required
                 class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500" />
        </div>
        <div>
          <label for="fecha_salida" class="block text-sm font-medium text-gray-700">Fecha de salida</label>
          <input id="fecha_salida" name="fecha_salida" type="date" value="{{reservacion.fecha_salida}}" required
                 class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500" />
        </div>
      </div>

      <!-- Monto -->
      <div>
        <label for="monto" class="block text-sm font-medium text-gray-700">Monto</label>
        <input id="monto" name="monto" type="number" value="{{reservacion.monto}}" min="0" step="0.01" required
               class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500" />
      </div>

      <!-- Habitaciones -->
      <div>
        <label for="habitacion_id" class="block text-sm font-medium text-gray-700">Habitación</label>
        <select id="habitacion_id" name="habitacion_id" required
                class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500">
          {{#each habitaciones}}
            <option value="{{this.id}}" {{#if (eq this.id ../reservacion.habitacion_id)}}selected{{/if}}>
              {{this.numero}} - {{this.tipo}}
            </option>
          {{/each}}
        </select>
      </div>

      <!-- Botones -->
      <div class="flex flex-col sm:flex-row sm:justify-between gap-4 pt-4">
        <a href="/reservaciones"
           class="inline-block px-4 py-2 border border-gray-400 text-gray-700 rounded hover:bg-gray-50 transition-colors">
          Cancelar
        </a>

        <button type="submit"
                class="inline-block px-5 py-2 bg-yellow-600 text-white rounded shadow hover:bg-yellow-700 transition-colors">
          Guardar cambios
        </button>
      </div>

    </form>
  </div>
</div>
