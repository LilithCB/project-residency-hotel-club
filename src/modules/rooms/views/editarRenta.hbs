{{! views/editarRenta.hbs }}
<div class="min-h-screen bg-gray-50 flex items-start py-10">
  <div class="max-w-3xl w-full mx-auto bg-white rounded-2xl shadow-md p-8">
    <header class="mb-6 flex items-center justify-between">
      <h1 class="text-2xl font-bold text-yellow-700">Editar Renta #{{renta.id}}</h1>
      <a href="/rentas" class="text-sm text-gray-600 hover:underline">← Volver a rentas</a>
    </header>

    <section class="mb-6">
      <div class="bg-gray-100 rounded p-4 text-sm text-gray-800">
        <p><strong>Habitación:</strong> {{renta.habitacion_id}}</p>
        <p><strong>Creada por:</strong> {{renta.usuario_id}}</p>
      </div>
    </section>

    <form action="/api/rentas/{{renta.id}}/editar" method="POST" class="space-y-4">
      <div>
        <label for="nombre_cliente" class="block text-sm font-medium text-gray-700">Nombre del cliente</label>
        <input id="nombre_cliente" name="nombre_cliente" value="{{renta.nombre_cliente}}" required
               class="mt-1 w-full rounded border-gray-300 px-3 py-2" />
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label for="fecha_ingreso" class="block text-sm font-medium text-gray-700">Fecha de ingreso</label>
          <input id="fecha_ingreso" name="fecha_ingreso" type="date" value="{{renta.fecha_ingreso}}" required
                 class="mt-1 w-full rounded border-gray-300 px-3 py-2" />
        </div>
        <div>
          <label for="fecha_salida" class="block text-sm font-medium text-gray-700">Fecha de salida</label>
          <input id="fecha_salida" name="fecha_salida" type="date" value="{{renta.fecha_salida}}" required
                 class="mt-1 w-full rounded border-gray-300 px-3 py-2" />
        </div>
      </div>

      <div>
        <label for="monto" class="block text-sm font-medium text-gray-700">Monto</label>
        <input id="monto" name="monto" type="number" value="{{renta.monto}}" min="0" step="0.01" required
               class="mt-1 w-full rounded border-gray-300 px-3 py-2" />
      </div>

      <div>
        <label for="tipo_pago" class="block text-sm font-medium text-gray-700">Tipo de pago</label>
        <select id="tipo_pago" name="tipo_pago" required class="mt-1 w-full rounded border-gray-300 px-3 py-2">
          <option value="Tarjeta" {{#if (eq renta.tipo_pago "Tarjeta")}}selected{{/if}}>Tarjeta</option>
          <option value="Transferencia" {{#if (eq renta.tipo_pago "Transferencia")}}selected{{/if}}>Transferencia</option>
          <option value="Efectivo" {{#if (eq renta.tipo_pago "Efectivo")}}selected{{/if}}>Efectivo</option>
        </select>
      </div>

      <div class="flex items-center justify-between gap-4 pt-4">
        <a href="/rentas" class="inline-block px-4 py-2 border rounded text-gray-700 hover:bg-gray-50">Cancelar</a>

        <div class="flex gap-2">
          <button type="submit" class="inline-block px-5 py-2 bg-yellow-600 text-white rounded shadow hover:bg-yellow-700">Guardar cambios</button>

          <form action="/api/rentas/{{renta.id}}/eliminar" method="POST" onsubmit="return confirm('¿Eliminar renta #{{renta.id}}?')">
            <button type="submit" class="inline-block px-5 py-2 bg-red-600 text-white rounded shadow hover:bg-red-700">Eliminar</button>
          </form>
        </div>
      </div>
    </form>
  </div>
</div>
