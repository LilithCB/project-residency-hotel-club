<div class="min-h-screen flex items-center justify-center bg-gray-100 p-4">
  <form action="/api/rentas" method="POST" id="formRenta"
        class="w-full sm:max-w-lg lg:max-w-xl bg-white p-6 rounded-xl shadow-md space-y-6">
    <input type="hidden" name="habitacion_id" value="{{habitacion.id}}">

    <!-- Cliente -->
    <div>
      <label for="nombre_cliente" class="block text-sm font-medium text-gray-700">Nombre del cliente</label>
      <input id="nombre_cliente" name="nombre_cliente" required
             class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2
                    focus:outline-none focus:ring-2 focus:ring-green-500"
             placeholder="Nombre completo">
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <label for="correo" class="block text-sm font-medium text-gray-700">Correo electrónico</label>
        <input id="correo" name="correo" type="email" required
               class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2
                      focus:outline-none focus:ring-2 focus:ring-green-500"
               placeholder="correo@ejemplo.com">
      </div>
      <div>
        <label for="telefono" class="block text-sm font-medium text-gray-700">Número de teléfono</label>
        <input id="telefono" name="telefono" type="tel" required
               class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2
                      focus:outline-none focus:ring-2 focus:ring-green-500"
               placeholder="10 dígitos">
      </div>
    </div>

    <!-- Fechas -->
    <fieldset class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <legend class="text-sm font-medium text-gray-700">Estancia</legend>
      <div>
        <label for="fecha_ingreso" class="block text-sm text-gray-700">Fecha de ingreso</label>
        <input id="fecha_ingreso" name="fecha_ingreso" type="date" required
               class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2
                      focus:outline-none focus:ring-2 focus:ring-green-500" />
      </div>
      <div>
        <label for="fecha_salida" class="block text-sm text-gray-700">Fecha de salida</label>
        <input id="fecha_salida" name="fecha_salida" type="date" required
               class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2
                      focus:outline-none focus:ring-2 focus:ring-green-500" />
      </div>
    </fieldset>

    <!-- Monto -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <label for="monto" class="block text-sm font-medium text-gray-700">Monto</label>
        <input id="monto" name="monto" type="number" min="0" step="0.01" required
               class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2
                      focus:outline-none focus:ring-2 focus:ring-green-500"
               placeholder="0.00" />
      </div>
      <div>
        <label for="monto_letras" class="block text-sm font-medium text-gray-700">Monto en letras</label>
        <input id="monto_letras" name="monto_letras" type="text" readonly
               class="mt-1 w-full rounded-lg border border-gray-200 bg-gray-100 px-3 py-2" />
      </div>
    </div>

    <!-- Pago -->
    <div>
      <label for="tipo_pago" class="block text-sm font-medium text-gray-700">Tipo de pago</label>
      <select id="tipo_pago" name="tipo_pago" required
              class="mt-1 w-full rounded-lg border border-gray-400 px-3 py-2
                     focus:outline-none focus:ring-2 focus:ring-green-500">
        <option value="">-- Selecciona --</option>
        <option value="Tarjeta">Tarjeta</option>
        <option value="Transferencia">Transferencia</option>
        <option value="Efectivo">Efectivo</option>
      </select>
    </div>

    <!-- Botones -->
    <div class="flex items-center justify-end gap-4 pt-4">
      <a href="/rooms"
         class="inline-block px-4 py-2 border border-red-500 text-red-600 rounded
                hover:bg-red-50 transition-colors">
        Cancelar
      </a>
      <button type="submit"
              class="inline-block px-5 py-2 bg-green-600 text-white rounded shadow
                     hover:bg-green-700 transition-colors">
        Crear renta
      </button>
    </div>
  </form>
</div>
