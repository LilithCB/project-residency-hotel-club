 <main class="pt-28 max-w-screen-xl mx-auto p-6">
    <section class="bg-white rounded-2xl shadow p-8">
      <h1 class="text-3xl font-bold text-center mb-3 text-gray-800">M√≥dulo de Entradas Diarias</h1>
      <p class="text-center text-gray-600 mb-8">
        Registra Visitantes Ingresando nombre, apellido y √°rea a la que acceden.
      </p>

      <form id="entryForm" action="/api/entries" method="POST" class="space-y-6">
        <!-- Nombre y apellido -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div>
            <label for="first_name" class="block text-sm focus:ring-blue-400  font-semibold text-gray-700 mb-1">Nombre</label>
            <input type="text" id="first_name" name="first_name" Required
                   class="w-full rounded-lg border-gray-300 px-4 py-2 focus:ring-2 focus:ring-indigo-400">
          </div>
          <div>
            <label for="last_name" class="block text-sm font-semibold text-gray-700 mb-1">Apellido</label>
            <input type="text" id="last_name" name="last_name" Required
                   class="w-full rounded-lg border-gray-300 px-4 py-2 focus:ring-2 focus:ring-indigo-400">
          </div>
        </div>

        <!-- M√©todo de pago -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">M√©todo de pago</label>
          <div class="flex gap-6 items-center">
            <label class="inline-flex items-center gap-2">
              <input type="radio" name="payment_method" value="Efectivo" Checked class="h-4 w-4 text-indigo-600">
              <span>Efectivo</span>
            </label>
            <label class="inline-flex items-center gap-2">
              <input type="radio" name="payment_method" value="Transferencia" class="h-4 w-4 text-indigo-600">
              <span>Transferencia</span>
            </label>
          </div>
        </div>

        <!-- Tarjetas de √°reas -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mt-4">
          <div class="rounded-2xl p-5 bg-blue-50 shadow-md hover:shadow-lg transition flex flex-col justify-between">
            <div>
              <h3 class="text-lg font-semibold text-gray-800">Canchas</h3>
              <p class="text-gray-600 text-sm">$60.00</p>
            </div>
            <button type="button" data-area="Canchas" data-cost="60"
                    class="select-area mt-4 w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg font-medium transition">
              Seleccionar
            </button>
          </div>

          <div class="rounded-2xl p-5 bg-teal-50 shadow-md hover:shadow-lg transition flex flex-col justify-between">
            <div>
              <h3 class="text-lg font-semibold text-gray-800">Alberca</h3>
              <p class="text-gray-600 text-sm">$100.00</p>
            </div>
            <button type="button" data-area="Alberca" data-cost="100"
                    class="select-area mt-4 w-full bg-teal-600 hover:bg-teal-700 text-white py-2 rounded-lg font-medium transition">
              Seleccionar
            </button>
          </div>

          <div class="rounded-2xl p-5 bg-amber-50 shadow-md hover:shadow-lg transition flex flex-col justify-between">
            <div>
              <h3 class="text-lg font-semibold text-gray-800">Gimnasio</h3>
              <p class="text-gray-600 text-sm">$40.00</p>
            </div>
            <button type="button" data-area="Gimnasio" data-cost="40"
                    class="select-area mt-4 w-full bg-amber-600 hover:bg-amber-700 text-white py-2 rounded-lg font-medium transition">
              Seleccionar
            </button>
          </div>
        </div>

        <!-- Inputs ocultos -->
        <input type="hidden" id="selected_area" name="area">
        <input type="hidden" id="selected_cost" name="cost">

        <!-- Bot√≥n de registrar -->
        <div class="text-center mt-6">
          <button type="submit"
                  class="bg-green-600 hover:bg-green-700 text-white px-8 py-2 rounded-lg font-semibold transition">
            Registrar Entrada
          </button>
        </div>
      </form>

      <!-- Botones de navegaci√≥n -->
      <div class="mt-8 flex flex-wrap justify-center gap-6">
        <a href="/entries/list"
           class="text-indigo-600 font-medium hover:text-indigo-800 hover:underline transition">üìã Ver Lista de Registros</a>
        <a href="/entries/reports"
           class="text-indigo-600 font-medium hover:text-indigo-800 hover:underline transition">üí∞ Ver Reporte de Ingresos</a>
      </div>
    </section>
  </main>

  <script>
    document.querySelectorAll('.select-area').forEach(btn => {
      btn.addEventListener('click', () => {
        const area = btn.dataset.area;
        const cost = btn.dataset.cost;
        const firstName = (document.getElementById('first_name').value || '').trim();
        const lastName = (document.getElementById('last_name').value || '').trim();
        const paymentMethod = document.querySelector('input[name="payment_method"]:checked')?.value || 'Efectivo';

        if (!firstName || !lastName) {
          Swal.fire('Datos faltantes', 'Por favor ingresa nombre y apellido antes de seleccionar un √°rea.', 'warning');
          return;
        }

        document.getElementById('selected_area').value = area;
        document.getElementById('selected_cost').value = cost;

        Swal.fire({
          title: 'Confirmar Entrada',
          html: `<div class="text-left space-y-1">
                   <p><strong>Nombre:</strong> ${firstName} ${lastName}</p>
                   <p><strong>√Årea:</strong> ${area} ‚Äî $${cost}</p>
                   <p><strong>Pago:</strong> ${paymentMethod}</p>
                 </div>`,
          icon: 'question',
          showCancelButton: true,
          confirmButtonText: 'Confirmar',
          cancelButtonText: 'Cancelar',
          confirmButtonColor: '#16a34a'
        }).then(result => {
          if (result.isConfirmed) document.getElementById('entryForm').submit();
        });
      });
    });

    document.getElementById('entryForm').addEventListener('submit', (e) => {
      if (!document.getElementById('selected_area').value) {
        e.preventDefault();
        Swal.fire('Selecciona un √°rea', 'Por favor elige una antes de registrar.', 'warning');
      }
    });
  </script>
  <script src="/public/webfonts/sweetalert2@11.js"></script>







