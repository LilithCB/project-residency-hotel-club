-- Name of database
CREATE DATABASE IF NOT EXISTS HotelManagement;

-- Use the database
USE HotelManagement;

-- Create table usrers
CREATE TABLE IF NOT EXISTS users (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    username TEXT NOT NULL UNIQUE,
    password TEXT NOT NULL,
    email TEXT,
);

