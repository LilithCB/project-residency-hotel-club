<!-- Hero Section con imagen de fondo -->
<section class="relative min-h-screen bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 overflow-hidden">
  <!-- Imagen de fondo con overlay -->
  <div class="absolute inset-0 bg-black/40"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-blue-900/60 to-transparent"></div>
  
  <!-- Contenido del Hero -->
  <div class="relative z-10 flex items-center justify-center min-h-screen px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Bienvenida personalizada -->
      <div class="mb-8">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight">
          Bienvenido al 
          <span class="text-yellow-400">Hotel Residencial</span>
        </h1>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 sm:p-6 mb-8 border border-white/20">
          <p class="text-xl sm:text-2xl text-white/90 mb-2">
            Hola, <span class="font-semibold text-yellow-300">{{username}}</span>
          </p>
          <div class="flex items-center justify-center gap-2">
            <i class="fas fa-user-circle text-yellow-400"></i>
            <span class="text-lg text-white/80">Tu rol es: </span>
            <span class="bg-yellow-400 text-blue-900 px-3 py-1 rounded-full font-semibold text-sm">
              {{role}}
            </span>
          </div>
        </div>
      </div>

      <!-- Descripción del rol -->
      <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 mb-8 border border-white/20">
        {{#if (eq role "Administrador")}}
          <div class="flex items-center justify-center gap-3 mb-4">
            <i class="fas fa-crown text-yellow-400 text-2xl"></i>
            <h2 class="text-xl font-semibold text-white">Panel de Administración</h2>
          </div>
          <p class="text-white/90 text-lg">
            Tienes acceso completo al sistema de gestión hotelera. Puedes administrar habitaciones, 
            usuarios, reportes y todas las funcionalidades del hotel.
          </p>
        {{/if}}
        {{#if (eq role "Usuario")}}
          <div class="flex items-center justify-center gap-3 mb-4">
            <i class="fas fa-concierge-bell text-yellow-400 text-2xl"></i>
            <h2 class="text-xl font-semibold text-white">Recepción</h2>
          </div>
          <p class="text-white/90 text-lg">
            Puedes gestionar reservas, atender a los clientes y manejar las operaciones 
            diarias del hotel con herramientas especializadas.
          </p>
        {{/if}}
      </div>

      <!-- Botones de acción rápida -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/rooms" class="bg-yellow-400 hover:bg-yellow-500 text-blue-900 px-8 py-3 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
          <i class="fas fa-bed mr-2"></i>Ver Habitaciones
        </a>
        <a href="/rooms/calendario" class="bg-white/20 hover:bg-white/30 text-white border-2 border-white/30 px-8 py-3 rounded-lg font-semibold text-lg transition-all duration-300 backdrop-blur-sm">
          <i class="fas fa-calendar mr-2"></i>Calendario
        </a>
      </div>
    </div>
  </div>

  <!-- Indicador de scroll -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <i class="fas fa-chevron-down text-white/60 text-2xl"></i>
  </div>
</section>

<!-- Estadísticas del Hotel -->
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Estadísticas del Hotel
      </h2>
      <p class="text-xl text-gray-600">Resumen de las operaciones actuales</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Habitaciones Totales -->
      <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-all duration-300">
        <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-bed text-blue-600 text-2xl"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900 mb-2">24</h3>
        <p class="text-gray-600 font-medium">Habitaciones Totales</p>
      </div>

      <!-- Ocupación Actual -->
      <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-all duration-300">
        <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-users text-green-600 text-2xl"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900 mb-2">18</h3>
        <p class="text-gray-600 font-medium">Habitaciones Ocupadas</p>
      </div>

      <!-- Reservaciones Hoy -->
      <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-all duration-300">
        <div class="bg-yellow-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-calendar-check text-yellow-600 text-2xl"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900 mb-2">5</h3>
        <p class="text-gray-600 font-medium">Check-ins Hoy</p>
      </div>

      <!-- Ingresos del Mes -->
      <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-all duration-300">
        <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-chart-line text-purple-600 text-2xl"></i>
        </div>
        <h3 class="text-3xl font-bold text-gray-900 mb-2">$45,280</h3>
        <p class="text-gray-600 font-medium">Ingresos del Mes</p>
      </div>
    </div>
  </div>
</section>

<!-- Servicios Principales -->
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Servicios del Sistema
      </h2>
      <p class="text-xl text-gray-600">Herramientas disponibles para la gestión hotelera</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Gestión de Habitaciones -->
      <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 border border-blue-200 hover:shadow-xl transition-all duration-300">
        <div class="flex items-center mb-4">
          <div class="bg-blue-500 w-12 h-12 rounded-lg flex items-center justify-center mr-4">
            <i class="fas fa-bed text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Habitaciones</h3>
        </div>
        <p class="text-gray-700 mb-4">Administra el estado de las habitaciones, precios y disponibilidad.</p>
        <a href="/rooms" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
          Ir a Habitaciones <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>

      <!-- Calendario -->
      <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 border border-green-200 hover:shadow-xl transition-all duration-300">
        <div class="flex items-center mb-4">
          <div class="bg-green-500 w-12 h-12 rounded-lg flex items-center justify-center mr-4">
            <i class="fas fa-calendar-alt text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Calendario</h3>
        </div>
        <p class="text-gray-700 mb-4">Visualiza reservaciones y disponibilidad en tiempo real.</p>
        <a href="/rooms/calendario" class="inline-flex items-center text-green-600 hover:text-green-800 font-medium">
          Ver Calendario <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>

      <!-- Entradas -->
      <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-6 border border-purple-200 hover:shadow-xl transition-all duration-300">
        <div class="flex items-center mb-4">
          <div class="bg-purple-500 w-12 h-12 rounded-lg flex items-center justify-center mr-4">
            <i class="fas fa-users text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Entradas</h3>
        </div>
        <p class="text-gray-700 mb-4">Registra y gestiona las entradas de huéspedes al hotel.</p>
        <a href="/entries" class="inline-flex items-center text-purple-600 hover:text-purple-800 font-medium">
          Ver Entradas <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>

      <!-- Membresías -->
      <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-xl p-6 border border-yellow-200 hover:shadow-xl transition-all duration-300">
        <div class="flex items-center mb-4">
          <div class="bg-yellow-500 w-12 h-12 rounded-lg flex items-center justify-center mr-4">
            <i class="fas fa-id-card text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Membresías</h3>
        </div>
        <p class="text-gray-700 mb-4">Administra las membresías y beneficios de los clientes.</p>
        <a href="/memberships" class="inline-flex items-center text-yellow-600 hover:text-yellow-800 font-medium">
          Ver Membresías <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>

      <!-- Tienda -->
      <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-xl p-6 border border-red-200 hover:shadow-xl transition-all duration-300">
        <div class="flex items-center mb-4">
          <div class="bg-red-500 w-12 h-12 rounded-lg flex items-center justify-center mr-4">
            <i class="fas fa-shopping-cart text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Tienda</h3>
        </div>
        <p class="text-gray-700 mb-4">Gestiona productos y servicios adicionales del hotel.</p>
        <a href="/store" class="inline-flex items-center text-red-600 hover:text-red-800 font-medium">
          Ver Tienda <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>

      {{#if (eq role "Administrador")}}
      <!-- Reportes (Solo Administradores) -->
      <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-xl p-6 border border-indigo-200 hover:shadow-xl transition-all duration-300">
        <div class="flex items-center mb-4">
          <div class="bg-indigo-500 w-12 h-12 rounded-lg flex items-center justify-center mr-4">
            <i class="fas fa-chart-bar text-white text-xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Reportes</h3>
        </div>
        <p class="text-gray-700 mb-4">Genera reportes detallados de ocupación e ingresos.</p>
        <a href="/rooms/reportes" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium">
          Ver Reportes <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>
      {{/if}}
    </div>
  </div>
</section>


