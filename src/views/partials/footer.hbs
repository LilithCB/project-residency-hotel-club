<!-- Script para año actual y ajuste dinámico del espacio inferior -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Año actual
    const yearSpan = document.getElementById('currentYear');
    if (yearSpan) yearSpan.textContent = new Date().getFullYear();

    // Ajustar padding-bottom según la altura real del footer
    const footer = document.getElementById("siteFooter");
    const main = document.querySelector("main"); // Ajusta si tu contenedor principal tiene otro selector

    function adjustPadding() {
      if (footer && main) {
        const footerHeight = footer.offsetHeight;
        main.style.paddingBottom = `${footerHeight + 16}px`; // +16px de margen extra
      }
    }

    adjustPadding(); // Al cargar
    window.addEventListener("resize", adjustPadding); // Al redimensionar
  });
</script>
