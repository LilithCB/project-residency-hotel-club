<div class="error-container">
  <h1 class="error-code">{{title}}</h1>
  <p class="error-message">{{mensaje}}</p>

  {{#if url}}
    <p class="error-url">Ruta solicitada: <strong>{{url}}</strong></p>
  {{/if}}

  {{#if errorMessage}}
    <p class="error-dev">Mensaje: {{errorMessage}}</p>
  {{/if}}

  {{#if stack}}
    <pre class="error-stack">{{stack}}</pre>
  {{/if}}

  <a href="/" class="error-link">Regresar al inicio</a>
</div>

<style>
  .error-container {
    text-align: center;
    margin-top: 10%;
    font-family: 'Arial', sans-serif;
    padding: 0 20px;
  }

  .error-code {
    font-size: 8rem;
    color: #ff6b6b;
    animation: pulse 1.5s infinite;
    margin: 0;
  }

  .error-message {
    font-size: 1.5rem;
    color: #555;
    margin: 20px 0;
  }

  .error-url {
    font-size: 1rem;
    color: #777;
    margin: 10px 0 20px;
  }

  .error-dev {
    color: #d9534f;
    font-size: 1.2rem;
    margin-top: 20px;
  }

  .error-stack {
    text-align: left;
    background: #f9f9f9;
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 5px;
    max-width: 800px;
    margin: 20px auto;
    overflow-x: auto;
    font-size: 0.9rem;
    color: #333;
  }

  .error-link {
    display: inline-block;
    font-size: 1.2rem;
    color: #fff;
    background-color: #ff6b6b;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    margin-top: 20px;
  }

  .error-link:hover {
    background-color: #ff4c4c;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
</style>
